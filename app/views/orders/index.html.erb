<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Orders</h1>
      <br>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name of Items</th>
            <th scope="col">Quantity</th>
            <th scope="col">Sub-total</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
          <td><%= order.id%></td>
          <td></td>
          <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>