<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Orders</h1>
      <br>
      <div>
        <%= link_to 'New Order', new_user_order_path, class: "btn btn-info" %>
      </div>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Order Number</th>
            <th scope="col">Ship To</th>
            <th scope="col">Total Amount</th>
            <th scope="col">View Order</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.ship_to %></td>
            <td><%= order.order_total %></td>
            <td><%= link_to "View Order", user_order_path(order) %></td>
            <td><%= order.status %></td>
            <td>
            <% if current_admin %>
              <%= link_to 'Edit', edit_user_order_path(order) %>
              <%= link_to 'Delete', user_order_path(order), method: :delete, data: {confirm:"Are you sure?"} %>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>