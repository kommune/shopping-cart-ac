<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Orders</h1>
      <br>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Products</th>
            <th scope="col">Description</th>
            <th scope="col">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product|%>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>