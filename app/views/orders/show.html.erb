<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Orders</h1>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Order Number</th>
            <th scope="col">Ship To</th>
            <th scope="col">Total Amount</th>
            <th scope="col">View Order</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @order.id %></td>
            <td><%= @order.ship_to %></td>
            <td><%= @order.order_total %></td>
            <td><%= link_to "View Order", user_orders_path(current_user) %></td>
            <td><%= @order.status %></td>
            <td>
            </td>
          </tr>
        </tbody>
      </table>
      
    </div>
  </div>
</div>