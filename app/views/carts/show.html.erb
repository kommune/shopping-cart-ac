<div class="container d-flex justify-content-center cart">
  <div class="row">
    <div class="col-md-12">
      <h1>My Shopping Cart</h1>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name of Item</th>
            <th scope="col">Item Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">Sub-total</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.each do |product_id, quantity| %>
          <tr>
            <% product = Product.find(product_id) %>
            <td scope="row"><%= product.name %></td>
            <td scope="row"><%= product.description %></td>
            <td scope="row"><%= quantity %></td>
            <td scope="row"><%= product.price %></td>
            <td scope="row"><%= link_to 'Remove', remove_from_cart_path(product), method: :delete %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="container d-flex justify-content-center cart">
      <div class="row">
        <div class="col-md-12">
          <%= link_to 'Checkout Items', checkout_orders_path, class: "btn btn-outline-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>